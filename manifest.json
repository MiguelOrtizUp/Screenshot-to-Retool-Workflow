{
  "manifest_version": 3,
  "name": "Screenshot to Retool Workflow",
  "version": "0.1.0",
  "description": "Capture full-page screenshots and send to Retool workflows.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot to Retool Workflow"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-send": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Capture full page and send to Retool"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
        
}




